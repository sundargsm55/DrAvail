@model DrAvail.Models.Doctor

@{
    ViewData["Title"] = "Edit";
    var lstErrors = ViewBag.ErrorList;
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<style>
    .card {
        padding: 20px;
        margin-bottom: 10px;
        margin-top: 10px;
    }

    select {
        z-index: 0;
    }

    .selectOpen {
        position: absolute;
        z-index: 9;
    }

    #myBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        font-size: 18px;
        border: none;
        outline: none;
        background-color: transparent;
        color: white;
        cursor: pointer;
        padding: 15px;
        border-radius: 4px;
    }

    #myBtn:hover {
            background-color: lightblue;
    }

    .nav-item{
        margin: 3px;
    }

    a, a:hover, a:focus, a:active {
        text-decoration: none;
        color: #0366d6;
    }

    .tab-pane:not(.active) {
        display: none;
    }
</style>
<h4>Edit</h4>

@if (lstErrors is not null && lstErrors.Count != 0)
{
    <div aria-live="polite" aria-atomic="true">
        <!-- Position it -->
        @*<div style="position: absolute; top: 0; right: 0;">*@
        <div class="position-fixed" style="z-index: 5;bottom:5%;right:1%;">
            @foreach (var errorMessage in lstErrors)
            {
                <!-- Then put toasts within -->
                <div class="toast fade show" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true" id="divToastError">
                    <div class="toast-header">
                        <strong class="mr-auto text-danger">Invalid Value Error</strong>
                        <small class="text-muted">just now</small>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close" id="btnToastClose">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        @errorMessage
                    </div>
                </div>
            }
        </div>
    </div>
}
<div class="row">
    <div class="col-md-6 text-left">
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="form-group col-md-6 text-right">
        <input type="button" id="btnSave" form="myForm" value="Save Changes" class="btn btn-danger" />
    </div>
</div>
<hr style="margin-top:0px" />
<div class="row">
    <div class="col-md-3">
        <ul class="nav nav-pills flex-column" role="tablist" aria-orientation="vertical">
            <li class="nav-item">
                <a class="nav-link active" id="liBasicInformaiton" href="#divBasicInformaiton" data-toggle="pill" role="tab" aria-controls="v-pills-basic" aria-selected="true">Basic Information</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="liDegree" href="#divDegree" data-toggle="pill" role="tab" aria-controls="v-pills-degree" aria-selected="false">Degree</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="liProfession" href="#divProfession" data-toggle="pill" role="tab" aria-controls="v-pills-work" aria-selected="false">Profession</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="liExperience" href="#divExperience" data-toggle="pill" role="tab" aria-controls="v-pills-exp" aria-selected="false">Experience</a>
            </li>
            <li class="nav-item">
