                                <span asp-validation-for="CommonAvailability.CommonDays.MorningEndTime" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="CommonAvailability.CommonDays.MorningEndHour" class="control-label">Morning End Hour</label>
                                <select asp-for="CommonAvailability.CommonDays.MorningEndHour" class="form-control" size="1" id="commonMorningEndHour">
                                    <option value="00">00</option>
                                    <option>01</option>
                                    <option>02</option>
