                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Add Experience</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-row">
                                    <label for="Title" class="control-label" id="lblTitle">Title *</label>
                                    <input name="Title" class="form-control" id="txtTitle" required data-val="true" />
                                </div>
                                <div class="form-row">
                                    <label for="EmploymentType" class="control-label" id="lblEmploymentType">Employment type</label>
                                    <select name="EmploymentType" class="form-control" id="txtEmploymentType" required>
